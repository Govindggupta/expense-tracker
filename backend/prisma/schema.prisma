generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  clerk_id  String   @id @unique
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  // relatioships
  expenses Expense[]
  Category Category[]
}

model Expense {
  id            String   @id @default(uuid())
  userId        String
  amount        Decimal
  categoryId    String
  // walletId String
  description   String?
  data          DateTime @default(now())
  attachmentUrl String?
  createdAt     DateTime @default(now())

  // relationships
  user     User     @relation(fields: [userId], references: [clerk_id], onDelete: Cascade)
  Category Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  userId    String? // Optional custom categories per user
  createdAt DateTime @default(now())

  // Relationships
  user     User?     @relation(fields: [userId], references: [clerk_id], onDelete: SetNull)
  expenses Expense[]
}
