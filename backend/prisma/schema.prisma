generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  clerk_id  String   @id @unique
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  // relatioships
  expenses Expense[]
  Category Category[]
  Wallet   Wallet[]
}

model Expense {
  id            String   @id @default(uuid())
  userId        String
  amount        Decimal
  categoryId    String
  walletId      String
  description   String?
  date          DateTime @default(now())
  attachmentUrl String?
  createdAt     DateTime @default(now())
  type          ExpenseType @default(EXPENSE)

  // relationships
  user     User     @relation(fields: [userId], references: [clerk_id], onDelete: Cascade)
  Category Category @relation(fields: [categoryId], references: [id])
  Wallet   Wallet  @relation(fields: [walletId], references: [id])
}

enum ExpenseType {
  EXPENSE
  INCOME
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  userId    String? // Optional custom categories per user
  createdAt DateTime @default(now())

  // Relationships
  user     User?     @relation(fields: [userId], references: [clerk_id], onDelete: SetNull)
  expenses Expense[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   
  name      String
  balance   Decimal
  createdAt DateTime @default(now())

  // Relationships
  user     User      @relation(fields: [userId], references: [clerk_id], onDelete: Cascade)
  expenses Expense[]
}
